<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="contentWrapStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="activityDetailImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/sandwich_picture_content_description</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="textViewLableStyle" parent="contentWrapStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewDisplayStyle" parent="contentWrapStyle">
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="linearLayoutVerticalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
